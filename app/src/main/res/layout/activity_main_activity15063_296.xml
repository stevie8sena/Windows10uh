<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="ninjacats2017.windows10updatehistory.MainActivity15063_296">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/desc296"
            android:layout_width="315dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:text="May 9, 2017—KB4016871 (OS Build 15063.296 and 15063.297)"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/isi296"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This security update includes quality improvements. No new operating system features are being introduced in this update. Key changes include:\n\n
#Addressed issue where autochk.exe can randomly skip drive checks and not fix corruptions, which may lead to data loss. \n
#Security updates to Microsoft Edge, Internet Explorer, Microsoft Graphics Component, Windows SMB Server, Windows COM, Microsoft Scripting Engine, Windows kernel, Windows Server, and the .NET Framework."
            android:textColor="@android:color/white"
            android:layout_below="@+id/desc296"
            android:layout_alignLeft="@+id/desc296"
            android:layout_alignStart="@+id/desc296"
            android:layout_alignRight="@+id/desc296"
            android:layout_alignEnd="@+id/desc296" />

        <TextView
            android:id="@+id/howto296"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to get this update: This update will be downloaded and installed automatically from Windows Update. To get the stand-alone package for this update, go to the Microsoft Update Catalog website."
            android:textColor="@android:color/white"
            android:layout_below="@+id/isi296"
            android:layout_alignLeft="@+id/btn296"
            android:layout_alignStart="@+id/btn296"
            android:layout_alignRight="@+id/isi296"
            android:layout_alignEnd="@+id/isi296" />

        <Button
            android:id="@+id/btn296"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="visit Microsoft Update Catalog"
            android:layout_above="@+id/isi2296"
            android:layout_alignLeft="@+id/isi296"
            android:layout_alignStart="@+id/isi296" />

        <TextView
            android:id="@+id/isi2296"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After this update is installed, the build number will be either 15063.296 (for all Windows 10 devices except Mobile and IoT) or 15063.297 (for Mobile and IoT)."
            android:textColor="@android:color/white"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btn296"
            android:layout_alignStart="@+id/btn296"
            android:layout_alignRight="@+id/howto296"
            android:layout_alignEnd="@+id/howto296" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
