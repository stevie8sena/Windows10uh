<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="ninjacats2017.windows10updatehistory.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:text="Windows 10 is a service, which means it gets better through periodic software updates."
            android:textColor="@android:color/white"
            android:layout_alignRight="@+id/btn1703"
            android:layout_alignEnd="@+id/btn1703"
            android:layout_alignLeft="@+id/btn1703"
            android:layout_alignStart="@+id/btn1703" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/desc1"
            android:layout_alignStart="@+id/desc1"
            android:layout_below="@+id/desc1"
            android:layout_marginTop="17dp"
            android:text=" The great news is you usually don’t have to do anything–updates automatically download and install whenever they’re available. "
            android:textColor="@android:color/white"
            android:layout_alignRight="@+id/desc1"
            android:layout_alignEnd="@+id/desc1" />

        <ImageButton
            android:id="@+id/btn1703"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            app:srcCompat="@drawable/btn1703"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_below="@+id/desc2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/btn1607"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@drawable/btn1607"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/btn1703"
            android:layout_alignLeft="@+id/btn1703"
            android:layout_alignStart="@+id/btn1703" />

        <ImageButton
            android:id="@+id/btn1511"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@drawable/btn1511"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/btn1607"
            android:layout_alignLeft="@+id/btn1607"
            android:layout_alignStart="@+id/btn1607" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
